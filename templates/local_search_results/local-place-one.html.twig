{% extends 'base.html.twig' %}


  {% block body %}

    <div class="container-fluid">
      <div class="col-md-3 col-lg-3 float-left news-feed">
         {{ include('local_search_results/parts/news-widget.html.twig') }} 
     </div>

     <div class="col-md-6 col-lg-6 float-left">

      <div class="card">
        <div class="card-header">
          Main information about: {{local_business_result.0.name}}
        </div>
        <div class="card-body">

          <div class="col-md-2 col-lg-4  float-left">
            <img src="{{local_business_result.0.image_url}}" width="280" height="auto" />
          </div>

          <div class="col-md-6  col-lg-6  float-right">
            <h1 class="card-title">{{local_business_result.0.name}}</h1>
            <address>
             {% for loc in local_business_result.0.location %}
               <p>  {{ loc }} </p>
             {% endfor %}
           </address>
           <p class="card-text">Telephone: {{local_business_result.0.display_phone}}</p>

           <p class="card-text">Categories:</p>
           <a href="#!" class="btn btn-primary">Go somewhere</a>
         </div>
       </div>
     </div>


     {{ include('local_search_results/parts/place-one-results.twig.html') }}


   </div>


   <div class="col-md-3 col-md-3 float-right">
     YOU MAY ALSO LIKE:
   </div>
 </div>
{% endblock %}
