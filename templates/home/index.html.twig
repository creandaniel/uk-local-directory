{% extends 'base.html.twig' %}

{% block title %}Welcome to Local UK directory{% endblock %}

  {% block body %}

    <div class="homepage-hero y-container" style="">
      <div class="row  h-100 justify-content-center align-items-center">
        <div "col-md-6">
          <h1> Welcome to Local UK directory </h1>
          <p> Search for Hotels, Pubs, Food, Drinks, Days out etc.</p>
          <form class="form-inline" type="get" action="/local/search">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" value="{% if local_term_results.local_term is defined %}{{local_term_results.local_term}}{% endif %}" name="localTerm" aria-label="Search">
            <input class="form-control mr-sm-2" type="search" placeholder="Search Area" name="cityLocation" value=" {% if local_term_results.city_location is defined %}{{local_term_results.city_location}} {% endif %}" aria-label="Search Location">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
          </form>
        </div>
      </div>
    </div>


    {{ include('local_search_results/index/most-popular.html.twig') }}

    <script type="text/javascript">
      $( document ).ready(function() {
        function changeBackgroundImage(){

          let images = [
          '/images/homepage/cakes.jpg',
          '/images/homepage/coffee-bars.jpg',
          '/images/homepage/drinks2.jpg',
          '/images/homepage/drinks.jpg',
          '/images/homepage/london-westminister.jpg',
          '/images/homepage/resturants.jpg',
          '/images/homepage/scotland.jpg',
          '/images/homepage/wales.jpg',
          '/images/homepage/zoos.jpg'
          ];

        // var maxNumber = 5;
        var numberChange = Math.floor((Math.random()  * images.length));
        var image = images[ numberChange ];

        $('.homepage-hero').css("background-image", "url(" + image + ")");

      }

      changeBackgroundImage();
    });
    </script>

  {% endblock %}



